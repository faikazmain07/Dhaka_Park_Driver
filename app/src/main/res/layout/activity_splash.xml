<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="?attr/colorPrimary"
    tools:context=".SplashActivity">

    <!-- Optional: App Logo (if you have one in res/drawable/dhaka_park_logo.png) -->
    <ImageView
        android:id="@+id/iv_splash_logo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/dhaka_park_logo"
        app:tint="@android:color/white"
        tools:ignore="ContentDescription" />

    <!-- App Name -->
    <TextView
        android:id="@+id/tv_splash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="DHAKA PARKING"
        android:textColor="@android:color/white"
        android:textSize="36sp"
        android:textStyle="bold" />

    <!-- Optional: Tagline -->
    <TextView
        android:id="@+id/tv_splash_tagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Find Your Space"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="italic" />

</LinearLayout>